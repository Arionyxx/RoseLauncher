{
  "$schema": "https://schema.tauri.app/config/2",
  "package": {
    "productName": "RoseLauncher",
    "version": "0.1.0"
  },
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "open": true
      },
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "identifier": "com.roselauncher.app"
    },
    "windows": [
      {
        "title": "RoseLauncher",
        "width": 1280,
        "height": 768,
        "minWidth": 1024,
        "minHeight": 640,
        "decorations": true,
        "resizable": true,
        "theme": "Dark"
      }
    ]
  }
}
